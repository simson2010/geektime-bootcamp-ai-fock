---
import PageLayout from '../../layouts/PageLayout.astro';
import ProjectDetail from '../../components/projects/ProjectDetail';
import { getProjectById } from '../../data/projects';
import { getUrl } from '../../utils/url';

const project = getProjectById('project-5');
if (!project) {
  return Astro.redirect('/projects');
}
---

<PageLayout title={`${project.title} - 陈天 AI 训练营`} description={project.subtitle}>
  <div class="pt-24 pb-16 bg-bg-secondary min-h-screen">
    <div class="container-custom">
      <ProjectDetail project={project} client:load />

      <div class="mt-12 text-center">
        <a href={getUrl('projects')} class="text-accent hover:underline">
          ← 返回所有项目
        </a>
      </div>
    </div>
  </div>
</PageLayout>
